                            </Popup.HorizontalOffset>
                            
                            <n:NotificationBox x:Name="NotificationBox"/>
                        </Popup>

                        <Menu Grid.Row="0" Grid.Column="2" Effect="{x:Null}" Background="Transparent" VerticalAlignment="Center">
