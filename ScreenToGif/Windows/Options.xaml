                    <n:ExtendedCheckBox Grid.Column="0" x:Name="AutomaticCleanUpCheckBox" Text="{DynamicResource TempFiles.AutomaticRemoval}" Margin="5"
                                            IsChecked="{Binding Source={x:Static u:UserSettings.All}, Path=AutomaticCleanUp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            ToolTip="{DynamicResource TempFiles.AutomaticRemoval.Info}"/>

                    <n:ImageButton Grid.Column="1" x:Name="OpenFolderButton" Text="{DynamicResource TempFiles.OpenFolder}" Padding="2,0"
                                       Content="{StaticResource Vector.Open}" ContentHeight="20" Click="OpenFolderButton_Click" Margin="5"/>
                    <n:ImageButton Grid.Column="2" x:Name="ClearTempButton" Text="{DynamicResource TempFiles.Clear}" Padding="2,0"
                                       Content="{StaticResource Vector.Delete.Folder}" ContentHeight="20" Click="ClearTempButton_Click" Margin="5" IsEnabled="False"/>
                </Grid>

                <Label Grid.Row="7" Content="{DynamicResource TempFiles.Settings}" Style="{StaticResource LabelSeparator}"/>
                <Grid Grid.Row="8" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource TempFiles.AppDataPath}" Foreground="#FF444444" Padding="3"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="AppDataPathTextBlock" Text="..." Foreground="#FF444444" Padding="3" TextWrapping="Wrap" FontStyle="Italic"/>

                    <n:ImageButton Grid.Row="0" Grid.Column="3" x:Name="RemoveAppDataImageButton" ToolTip="{DynamicResource TempFiles.RemoveSettings}" Style="{StaticResource Style.Button.NoText}"
                                   Content="{StaticResource Vector.Remove}" Padding="3" ContentHeight="14" Command="u:Commands.RemoveAppDataSettings"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource TempFiles.LocalPath}" Foreground="#FF444444" Padding="3"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LocalPathTextBlock" Text="..." Foreground="#FF444444" Padding="3" TextWrapping="Wrap" FontStyle="Italic"/>

                    <n:ImageButton Grid.Row="1" Grid.Column="2" x:Name="CreateLocalImageButton" ToolTip="{DynamicResource TempFiles.CreateSettings}" Style="{StaticResource Style.Button.NoText}"
                                   Content="{StaticResource Vector.Add}" Padding="3" ContentHeight="14" Command="u:Commands.CreateLocalSettings"/>

                    <n:ImageButton Grid.Row="1" Grid.Column="3" x:Name="RemoveLocalImageButton" ToolTip="{DynamicResource TempFiles.RemoveSettings}" Style="{StaticResource Style.Button.NoText}"
                                   Content="{StaticResource Vector.Remove}" Padding="3" ContentHeight="14" Command="u:Commands.RemoveLocalSettings"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Text="{DynamicResource TempFiles.SettingsInfo}" Foreground="#FF444444" TextWrapping="Wrap" Padding="4,2" Margin="0,10,0,0"/>
                </Grid>
            </Grid>

            <!--Extras-->
            <Grid Grid.Column="1" x:Name="ExtrasGrid" Visibility="{Binding IsChecked, Converter={StaticResource Bool2Visibility}, ElementName=ExtrasRadioButton}"
                  Loaded="ExtrasGrid_Loaded">
                <Grid.RowDefinitions>
                    <RowDefinition Height="21"/>
                    <RowDefinition MinHeight="29" Height="Auto"/>
                    <RowDefinition Height="21"/>
                    <RowDefinition MinHeight="29" Height="Auto"/>
                    <RowDefinition Height="21"/>
                    <RowDefinition MinHeight="29" Height="Auto"/>
                </Grid.RowDefinitions>

                <n:LabelSeparator Grid.Row="0" Text="{DynamicResource Extras.External}"/>
                <WrapPanel Grid.Row="1" Margin="5,0">
                    <n:ImageCard x:Name="FfmpegImageCard" Header="FFmpeg" Click="FfmpegImageCard_Click"/>
                    <n:ImageCard x:Name="GifskiImageCard" Header="Gifski" Click="GifskiImageCard_Click"/>
                </WrapPanel>                
                
                <n:LabelSeparator Grid.Row="2" Text="{DynamicResource Extras.FfmpegLocation}"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <n:ExtendedTextBox Grid.Column="0" x:Name="FfmpegLocationTextBox" Margin="10,3,0,3" Text="{Binding FfmpegLocation, Source={x:Static u:UserSettings.All}}" LostKeyboardFocus="LocationTextBox_LostKeyboardFocus"/>

                    <n:ImageButton Grid.Column="1" Style="{StaticResource Style.Button.NoText}" Content="{StaticResource Vector.Open}" ContentWidth="20"
                                   Click="SelectFfmpeg_Click" ToolTip="{DynamicResource Extras.FfmpegLocation.Select}"
                                   ToolTipService.Placement="Top" ToolTipService.HorizontalOffset="-5"/>
                </Grid>

                <n:LabelSeparator Grid.Row="4" Text="{DynamicResource Extras.GifskiLocation}"/>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>

                    <n:ExtendedTextBox Grid.Column="0" x:Name="GifskiLocationTextBox" Margin="10,3,0,3" Text="{Binding GifskiLocation, Source={x:Static u:UserSettings.All}}" LostKeyboardFocus="LocationTextBox_LostKeyboardFocus"/>

                    <n:ImageButton Grid.Column="1" Style="{StaticResource Style.Button.NoText}" Content="{StaticResource Vector.Open}" ContentWidth="20"
                                   Click="SelectGifski_Click" ToolTip="{DynamicResource Extras.GifskiLocation.Select}"
                                   ToolTipService.Placement="Top" ToolTipService.HorizontalOffset="-5"/>
                </Grid>
            </Grid>

            <!--Donate-->
            <Grid Grid.Column="1" x:Name="DonateGrid" Visibility="{Binding IsChecked, ElementName=DonateRadio, Converter={StaticResource Bool2Visibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="21"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="{DynamicResource Donate.IfYouWish}" Style="{StaticResource LabelSeparator}"/>

                <Label Grid.Row="1" x:Name="PaypalLabel" Content="Paypal" FontSize="16" Padding="1" Margin="10,0,0,0"/>
                <Grid Grid.Row="2" Margin="20,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <n:ImageButton Grid.Row="0" Grid.Column="0" x:Name="DonateButton" Text="{DynamicResource Donate.DonateDollar}" Margin="5" Content="{StaticResource Vector.Money}" MaxSize="20"
                                   HorizontalAlignment="Stretch" MinWidth="120" MinHeight="40" VerticalAlignment="Bottom" VerticalContentAlignment="Center"
                                   Foreground="#FF143A61" FontSize="18" FontWeight="SemiBold" FontStyle="Italic" Cursor="Hand"
                                   Click="DonateButton_Click" Style="{StaticResource Style.Button.Horizontal.Special}"
                                   ToolTipService.ToolTip="{DynamicResource Donate.Paypal.Dollar}" 
                                   ToolTipService.Placement="Top" ToolTipService.HorizontalOffset="-5"/>

                    <n:ImageButton Grid.Row="0" Grid.Column="1" x:Name="DonateEuroButton" Text="{DynamicResource Donate.DonateEuro}" Margin="5" Content="{StaticResource Vector.Money}" MaxSize="20"
                                   HorizontalAlignment="Stretch" MinWidth="120" MinHeight="40" VerticalAlignment="Bottom" VerticalContentAlignment="Center"
                                   Foreground="#FF143A61" FontSize="18" FontWeight="SemiBold" FontStyle="Italic" Cursor="Hand"
                                   Click="DonateEuroButton_Click" Style="{StaticResource Style.Button.Horizontal.Special}"
                                   ToolTipService.ToolTip="{DynamicResource Donate.Paypal.Euro}" ToolTipService.Placement="Top" ToolTipService.HorizontalOffset="-5"/>

                    <n:ImageButton Grid.Row="0" Grid.Column="2" x:Name="DonateOtherButton" Text="{DynamicResource Donate.Donate}" Margin="5" Content="{StaticResource Vector.Money}" MaxSize="20"
                                   HorizontalAlignment="Stretch" MinWidth="120" MinHeight="40" VerticalAlignment="Bottom" VerticalContentAlignment="Center"
                                   Foreground="#FF143A61" FontSize="18" FontWeight="SemiBold" FontStyle="Italic" Cursor="Hand"
                                   Click="DonateOtherButton_Click" Style="{StaticResource Style.Button.Horizontal.Special}"
                                   ToolTipService.ToolTip="{DynamicResource Donate.Paypal.OwnCurrency}" ToolTipService.Placement="Top" ToolTipService.HorizontalOffset="-5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="US$ - USA Dollar" Foreground="#FFA49C9C" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="1"/>

                    <Label Grid.Row="1" Grid.Column="1" Content="€ - Euro" Foreground="#FFA49C9C" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="1"/>

                    <ComboBox Grid.Row="1" Grid.Column="2" x:Name="CurrencyComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" SelectedIndex="0"
                                  Margin="3" Foreground="#FFA49C9C">
                        <Label Content="AUD - Australian Dollar" Padding="2"/>
                        <Label Content="BRL - Brazilian Real" Padding="2"/>
                        <Label Content="CAD - Canadian Dollar" Padding="2"/>
                        <Label Content="CZK - Czech Koruna" Padding="2"/>
                        <Label Content="DKK - Danish Krone" Padding="2"/>
                        <Label Content="HKD - Hong Kong Dollar" Padding="2"/>
                        <Label Content="HUF - Hungarian Forint" Padding="2"/>
                        <Label Content="ILS - Israeli New Sheqel" Padding="2"/>
                        <Label Content="JPY - Japanese Yen" Padding="2"/>
                        <Label Content="MXN - Mexican Peso" Padding="2"/>
                        <Label Content="NOK - Norwegian Krone" Padding="2"/>
                        <Label Content="NZD - New Zealand Dollar " Padding="2"/>
                        <Label Content="PHP - Philippine Peso" Padding="2"/>
                        <Label Content="PLN - Polish Zloty" Padding="2"/>
                        <Label Content="GBP - Pound Sterling" Padding="2"/>
                        <Label Content="RUB - Russian Ruble" Padding="2"/>
                        <Label Content="SGD - Singapore Dollar" Padding="2"/>
                        <Label Content="SEK - Swedish Krona" Padding="2"/>
                        <Label Content="CHK - Swiss Franc" Padding="2"/>
                        <Label Content="TWD - Taiwan New Dollar" Padding="2"/>
                        <Label Content="THB - Thai Baht" Padding="2"/>
                    </ComboBox>

                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="Reference: screentogif • nicke@outlook.com.br" Foreground="#FFA49C9C" FontStyle="Italic" HorizontalAlignment="Center" Padding="1"/>
                </Grid>

                <Label Grid.Row="3" Content="Patreon" FontSize="16" Padding="1" Margin="10,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility}"/>
                <TextBlock Grid.Row="4" Margin="20,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility}">
                        <Hyperlink Click="PatreonHyperlink_Click">
                            <Run Text="{DynamicResource Donate.Patreon}"/>
                        </Hyperlink>
                </TextBlock>

                <Label Grid.Row="5" Content="Steam" FontSize="16" Padding="1" Margin="10,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility}"/>
                <TextBlock Grid.Row="6" Margin="20,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility}">
                        <Hyperlink Click="SteamHyperlink_Click">
                            <Run Text="{DynamicResource Donate.Steam.Link}"/>
                        </Hyperlink>
                            <Run Text="{DynamicResource Donate.Steam.Text}"/>
                </TextBlock>

                <Label Grid.Row="7" Content="Support" FontSize="16" Padding="1" Margin="10,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility, Converter={StaticResource InvertedVisibility}}"/>
                <TextBlock Grid.Row="8" Margin="20,0,0,0" Visibility="{Binding ElementName=PaypalLabel, Path=Visibility, Converter={StaticResource InvertedVisibility}}">
                        <Hyperlink Click="ExtraSupportHyperlink_Click">
                            <Run Text="If you wish to support the project, please click here to visit the screentogif.com/donate"/>
                        </Hyperlink>
                </TextBlock>
            </Grid>

            <!--About-->
            <StackPanel Grid.Column="1" x:Name="AboutPanel" Visibility="{Binding IsChecked, ElementName=AboutRadio, Converter={StaticResource Bool2Visibility}}">
                <Viewbox Child="{StaticResource Vector.Logo}" MaxHeight="42" MaxWidth="50" Margin="3"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="34"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="ScreenToGif" FontSize="18" FontFamily="Segoe UI Semilight" Margin="0,0,5,0" 
                           HorizontalAlignment="Right" VerticalContentAlignment="Center" Effect="{StaticResource Shadow.Foreground}"/>

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <Label Content="{DynamicResource About.Version}" FontSize="18" FontFamily="Segoe UI Semilight" Effect="{StaticResource Shadow.Foreground}"
                               VerticalContentAlignment="Center"/>
                        <Label Content="{Binding Source={x:Static u:UserSettings.All}, Path=Version}" FontSize="18" FontFamily="Segoe UI Semilight" Effect="{StaticResource Shadow.Foreground}"
                               VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <Label Grid.Row="1" Grid.Column="0" FontSize="16" FontFamily="Segoe UI Semilight" HorizontalAlignment="Right" Cursor="Hand" Padding="3,5" VerticalContentAlignment="Center"
                           Effect="{StaticResource Shadow.Foreground}">
                        <Hyperlink NavigateUri="http://screentogif.com/" RequestNavigate="Hyperlink_OnRequestNavigate">
                            screentogif.com
                        </Hyperlink>
                    </Label>

                    <Label Grid.Row="1" Grid.Column="1" Content="{DynamicResource About.Author}" FontSize="16" FontFamily="Segoe UI Semilight" VerticalContentAlignment="Center"
                           Effect="{StaticResource Shadow.Foreground}"/>
                </Grid>

                <Label Content="{DynamicResource About.Contact}" Style="{StaticResource LabelSeparator}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Email:" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                        <Hyperlink NavigateUri="mailto:nicke@outlook.com.br" RequestNavigate="Hyperlink_OnRequestNavigate">
                            nicke@outlook.com.br
                        </Hyperlink>
                    </Label>

                    <Label Grid.Row="1" Grid.Column="0" Content="Subreddit:" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <Label Grid.Row="1" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                        <Hyperlink NavigateUri="https://www.reddit.com/r/screentogif/" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       RequestNavigate="Hyperlink_OnRequestNavigate">
                            /r/screentogif/
                        </Hyperlink>
                    </Label>

                    <Label Grid.Row="2" Grid.Column="0" Content="Twitter:" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <Label Grid.Row="2" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                        <Hyperlink NavigateUri="https://twitter.com/NickeManarin" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       RequestNavigate="Hyperlink_OnRequestNavigate">
                            @NickeManarin
                        </Hyperlink>
                    </Label>
                </Grid>

                <Label Content="{DynamicResource About.Technical}" Style="{StaticResource LabelSeparator}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="{DynamicResource About.Technical.License}" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="12" FontFamily="Segoe UI Semilight" HorizontalAlignment="Left" Padding="3,5">
                            <Hyperlink NavigateUri="https://github.com/NickeManarin/ScreenToGif/blob/master/LICENSE.txt" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       Cursor="Hand" RequestNavigate="Hyperlink_OnRequestNavigate">
                                MS-PL
                            </Hyperlink>
                            <Run Text="/"/>
                            <Hyperlink NavigateUri="https://tldrlegal.com/license/microsoft-public-license-(ms-pl)" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       Cursor="Hand" RequestNavigate="Hyperlink_OnRequestNavigate">
                                TL;DR Legal
                            </Hyperlink>
                            <Run Text="{DynamicResource About.Technical.Free}" Foreground="#FF969696"/>
                    </TextBlock>

                    <Label Grid.Row="1" Grid.Column="0" Content="{DynamicResource About.Technical.SourceCode}" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                            <Hyperlink NavigateUri="https://github.com/NickeManarin/ScreenToGif" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       RequestNavigate="Hyperlink_OnRequestNavigate">
                                github.com/NickeManarin/ScreenToGif
                            </Hyperlink>
                    </TextBlock>
                </Grid>

                <Label Content="{DynamicResource About.ABigThanksTo}" Style="{StaticResource LabelSeparator}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Visual Studio:" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <Label Grid.Row="0" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                        <Hyperlink NavigateUri="http://visualstudio.com/" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       RequestNavigate="Hyperlink_OnRequestNavigate">
                            visualstudio.com
                        </Hyperlink>
                    </Label>

                    <Label Grid.Row="1" Grid.Column="0" Content="ReSharper:" FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>

                    <Label Grid.Row="1" Grid.Column="1" FontSize="12" HorizontalAlignment="Left" Cursor="Hand" Padding="3,5">
                        <Hyperlink NavigateUri="https://www.jetbrains.com/resharper" ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" 
                                       RequestNavigate="Hyperlink_OnRequestNavigate">
                            jetbrains.com/resharper
                        </Hyperlink>
                    </Label>

                    <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="{DynamicResource About.ABigThanksTo.Everyone}" 
                           FontSize="12" VerticalContentAlignment="Center" Margin="15,0,0,0"/>
                </Grid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Background="WhiteSmoke" UseLayoutRounding="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" MinWidth="110"/>
            </Grid.ColumnDefinitions>

            <n:ImageButton Grid.Column="2" x:Name="OkButton" Text="{DynamicResource Ok}" Margin="5" Padding="2,0" ContentHeight="20" Content="{StaticResource Vector.Ok}" 
                           IsCancel="True" IsDefault="True"/>
        </Grid>
    </Grid>
</Window>
