                                    <Binding ElementName="BorderTopThicknessNumericUpDown" Path="Value"/>
                                    <Binding ElementName="BorderRightThicknessNumericUpDown" Path="Value"/>
                                    <Binding ElementName="BorderBottomThicknessNumericUpDown" Path="Value"/>
