                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Style.Setters>
                                        <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextBlock.Width" Value="Auto"/>
                                        <Setter Property="TextBlock.Effect" Value="{x:Null}"/>
